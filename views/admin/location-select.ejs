<%- contentFor('content') %>

<div class="container">
    <div style="text-align:center;" class="page-header"><h3>Location</h3></div>

    <form id="locationForm" action="/account/location" method="POST" class="form-horizontal">
        <input type="hidden" name="_csrf" value="<%- _csrf %>">
        <select id="locationSelect" class="" style="width:100%  ; border:white ; -webkit-appearance:none ; white-space:pre-wrap;white-space:-moz-pre-wrap;white-space:-pre-wrap;white-space:-o-pre-wrap;word-wrap:break-word;display:none;"  name="location" multiple="multiple">
            <option selected="selected" value="los angeles"> LA </option>
        </select>

    <div id="location" style="padding: 15px 15px;">
    <span><strong>Select Location Preferences</strong></span> 
        <input class="search-input form-control" placeholder="Search" style="margin-bottom:5px;width:100%;border:1px solid #f0f0f0;-webkit-appearance:none;box-shadow:none;"/>
        <div class="pre-container">
            <div class="se-pre-con"></div>
            <div class="pre-placeholder"></div>
        </div>
        <div id="jstree" style="display:none;">
            <ul>
                <% config.regions.forEach(function(region){ %>
                    <li><%- region[Object.keys(region)[0]] %>
                      <ul>
                        <% config[Object.keys(region)[0]].forEach(function(item,index){ %>
                            <li><%- item %>
                                <% if(config.states[item] && config.states[item].length > 0){ %>
                                    <ul>
                                        <% config.states[item].forEach(function(subitem){ %>
                                            <% if(subitem){ %>
                                                <li data-jstree='{"value":"<%- item %>-<%- subitem %>" <% if(_.contains(data.preferences.location, item+'-'+subitem)){ %> ,"selected":true <% } %>}' > 
                                                    <%- subitem %>
                                                </li>
                                            <% } %>
                                        <% }) %>
                                    </ul>
                                <% } %>
                            </li>
                        <% }) %>
                      </ul>
                    </li>
                <% }) %>
            </ul>
        </div>
    </div>
    <div class="form-group" style="text-align:center;">
        <div class="col-lg-12"><button type="submit" class="btn btn-primary">
            <i style="position: relative;left: -3px;top: 0px;" class="fa fa-map-marker"></i>Save</button><br />
            <a href="/profile" class="btn btn-button" style="text-align:center;">Cancel</a>
        </div>
    </div>
    </form>

</div>
